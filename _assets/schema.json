{
  "id": 1,
  "*importance": 0,
  "*type": "event_type",
  "*properties": {
      "title": "event title",
      "description": "event description",
      "geo": {
          "location": "location name i.e. country",
          "map": "map name case insensitive"
      },
      "coordinates": {
          "x": 201,
          "y": 123
      }
  },
  "ripples": [
    {
        "id": 1,
        "type": "ripple type i.e. paths, single event",
        "*type_properties": {
            "coordinates": {
                "x": 0.01,
                "y": 0.05
            },
            "color": "red"
        },
        "*media": {
            "id": 1,
            "type": "immersive or map based",
            "*file": "fileNameWithoutExtension",
            "*extension": "mp4",
            "*volume": 50,
            "*allow_drag": true,
            "*allow_click": false,
            "*auto_close": true,
            "*auto_play": true
        },
        "properties": {
            "title": "ripple title",
            "description": "ripple description",
            "location": "bottom"
        },
        "content": [
            {
                "media_id": 1,
                "*coordinates": {
                    "x": 0.015,
                    "y": 0.02
                },
                "*interval": 420,
                "*properties": {
                    "title": "content title",
                    "*text": "content information"
                }
            }
        ]
    }
  ],
  "stats": [
      {
          "type": "stat type i.e. deaths",
          "value": 12312,
          "progression": {
              "type": "overtime, does it increase or decrease?",
              "value": 12,
              "rate": {
                  "type": "is it daily, monthly, per second?",
                  "value": 23
              }
          }
      }
  ]
